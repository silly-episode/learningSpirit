<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.learningspirit.dao.MessageReceiveDao">

    <resultMap type="com.boot.learningspirit.entity.MessageReceive" id="MessageReceiveMap">
        <result property="msgReceiveId" column="msg_receive_id" jdbcType="INTEGER"/>
        <result property="receiveOpenId" column="receive_open_id" jdbcType="VARCHAR"/>
        <result property="msgId" column="msg_id" jdbcType="INTEGER"/>
        <result property="deal" column="deal" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="msgReceiveId" useGeneratedKeys="true">
        insert into learningspirit.message_receive(receive_open_id, msg_id, deal)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.receiveOpenId}, #{entity.msgId}, #{entity.deal})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="msgReceiveId" useGeneratedKeys="true">
        insert into learningspirit.message_receive(receive_open_id, msg_id, deal)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.receiveOpenId}, #{entity.msgId}, #{entity.deal})
        </foreach>
        on duplicate key update
        receive_open_id = values(receive_open_id) , msg_id = values(msg_id) , deal = values(deal)
    </insert>

</mapper>

